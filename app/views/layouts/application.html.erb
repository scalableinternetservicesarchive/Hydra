<!DOCTYPE html>
<html>
<head>
  <title>Project3</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>

<% if current_user!=nil %>
  <!-- current_user will return true if a user is logged in -->
  <%= "Logged in as " %> <%= link_to "#{current_user.Username}", user_path(current_user) %> | <%= link_to 'Posts', posts_url %> | <%= link_to 'Log Out', logout_path, :method => :delete %>
<% else %>
  <!-- not logged in -->
  <%= link_to 'HomePage', root_path %> | <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', new_user_path %>
<% end %>
<hr>

<% if notice %>
  <%= notice %>
<% end %>

<% if alert %>
  <%= alert %>
<% end %>
<%= yield %>
</body>
</html>
