
<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :Username %>
      <%= f.text_field :Username %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>